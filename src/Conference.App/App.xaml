<Application
    x:Class="Conference.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Conference.App"
    xmlns:localCommon="using:Conference.App.Common">

    <Application.Resources>
        <!-- Application-specific resources -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/CustomStyles.xaml" />
                <ResourceDictionary>
                    <x:String x:Key="AppName">Tarabica # IT Conference</x:String>
                    <localCommon:ViewModelLocator x:Key="MainViewModelLocator"  />
                    <SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="#67b8de"/>
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPointerOverBackgroundThemeBrush" Color="#7ED5E7" />
                    <SolidColorBrush x:Key="ToggleSwitchCurtainPressedBackgroundThemeBrush" Color="#AA7ED5E7" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
