                <TextBlock Grid.Column="1" Text="{Binding Level}" VerticalAlignment="Center" Margin="20,-8,0,0" Style="{StaticResource TitleTextBlockStyle}"/>
            </Grid>
            <Grid Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <Button Content="Favorite" Command="{Binding SwitchFavoriteCommand}" Visibility="{Binding IsFavorite, Converter={StaticResource InvertedBooleanToVisibilityConverter}}"></Button>
                    <Button Content="Unfavorite" Command="{Binding SwitchFavoriteCommand}" Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"></Button>
                </StackPanel>
            </Grid>
        </StackPanel>
    </StackPanel>

</SettingsFlyout>
